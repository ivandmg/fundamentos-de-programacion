
// ejercicio1.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;
int serie (int n);
	void main()
{
	int n, s=0;

	cout<<"ingrese la cantidad de impares que desea sumar:";
	cin>>n;

	s=serie(n);
	cout<<"el resultado es:"<<s;
	_getch();
}

     int serie (int n)
	 {
		 int s=0;
	 for (int i=1;i<=n;i++){
	 s=s+i;
	 i++;
	 }
	 return s;
 }
