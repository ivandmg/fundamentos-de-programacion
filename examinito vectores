#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"
 

using namespace std;

 bool partidario(int arreglo[], int tam);
 void leer(int arreglo, int tam);

 void main()
{
	bool r;
	int tam, arreglo [100];
	cout<<"ingrese el tamaÃ±o del vector "<<endl;
	cin>>tam;
	cout<<"ingrese el vector:";
	leer(arreglo[100], tam);
		r=partidario(arreglo,tam);
		if (r==true)
			cout<<"el arreglo es partidario";
		else 
			cout<<"el arreglo no es partidario";
		getch();
 }
 void leer (int arreglo, int tam)
 {
	 for (int i=0;i<tam;i++)
		 cin>>arreglo [i];
 }
 bool partidario(int arreglo[], int tam)
 {
	 bool r=false;
	 for (int i=0;i<tam;i++)
		 for(int j=0;i<tam-1;i=+2)
		 {
			 if (arreglo[i]>arreglo[j])
				 return true;
			 else 
				 return r;
		 }
 }
