//
triangulo con do and while
#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;
void main()
{
	float b,h,area,areass,n;
	do{
	cout<<  "calcular el area del triangulo";
	cout<<endl<<"Base:";
	cin>>b;
	cout <<"altura:";
	cin>>h;
	area=(b*h)/2;
	cout<< "area"<<area<<endl;
	cout<<"presione 0 para salir:";
	cin>>n;
	}
	while (n!=0);
	getch();
}
