
#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include <string>

using namespace std;
void cargar(int tam,int v[]);
void mostrar(int tam,int v[]);
void main()
{
	int tam,v[100];
	cout<<"ingrese el tamaÃ±o del vector";
	cin>>tam;
	cargar(tam,v);
	mostrar(tam,v);
	getch();
}
void cargar(int tam,int v[])
{
	for(int i=0;i<tam;i++){
	    cout<<"v["<<i<<"] = "<<endl;
		cin>>v[i];
	}
}
void mostrar(int tam,int v[]){

	int x;
	cout<<"ingrese el numero que desea buscar";
	cin>>x;
	for(int i=0;i<tam;i++){
		if(v[i]==x){
			cout<<i;
		}
	}
}






