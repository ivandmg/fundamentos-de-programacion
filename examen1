#include "math.h"
using namespace std;
void manin()
{
	int numb;
	float preciototal, totalapagarproducto;
	//validar la entrada
	do {
		cout<<"ingrese el precio";
		cin>>preciototal;
	} while (preciototal>=0);  
	//determinar el descuetno
	if (numb==2)
	{ cout<<"el precio total es:"<<preciototal;
	}
	else 
		if (numb==4)
			cout<<"el precio total:"<<preciototal*0.95;
		else 
			if (numb==6)
				cout<<"precio total:"<<preciototal*0.80;
			else 
				if (numb==8)
					cout<<"el precio es:"<<preciototal*0.50;
				else 
					cout<<"error bolita no cosiderada";
	getch();
}
