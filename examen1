#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"
using namespace std;
void manin()
{
	int numcamisas;
	float preciototal, totalapagarcondescuento;
	//validar la entrada
	do {
		cout<<"ingresar numero de camisas";
		cin>>numcamisas;
	} while (numcamisas<0);  //  !(numcamisas>=0)
	do { 
		cout<<"ingrese el precio de la camisa:";
		cin>>preciototal;
	} while (preciototal<=0);
	//determinar el descuento
	if (numcamisas<=5)
	
		totalapagarcondescuento=numcamisas*preciototal*0.7;

	  else 
		  totalapagarcondescuento=numcamisas*preciototal*0.80;
	cout<<"total a pagar con descuetno:"<<totalapagarcondescuento;
  
  
  #include "stdafx.h"
#include <iostream>
