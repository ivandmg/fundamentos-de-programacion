#include "stdafx.h"
#include <iostream>    
#include "conio.h"  
#include "math.h"
using namespace std;
int suma(int n);
void main()
{
	int n,s;
	cout<<"ingrese hasta que numero desea sumar";
	cin>>n;
	s=suma(n);
	cout<<"el resultado sera:"<<s;
	getch();
}
 int suma(int n)
 {
	 int r,s=0 ;
	for(int i=1;i<=n;i++){
		r=i % 2;
		if (r==1)
			s=s+i;
	}
	return s;
 }
